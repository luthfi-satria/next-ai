{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@/library/*": ["library/*"],
      "@/constants/*": ["constants/*"]
    },
    // ------------------------------------------
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "tailwind.config.js",
    "postcss.config.js",
    ".next/types/**/*.ts",
    "eslint.config.mts",
    "jest.config.ts"
  ],
  "exclude": ["node_modules"]
}
